<Page x:Class="Sanatory.View.EvAdd"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Sanatory.View"
      xmlns:vm="clr-namespace:Sanatory.ViewModel"
      mc:Ignorable="d" 
      DataContext="{Binding evAddVM}"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EvAdd">

    <Page.Resources>
        <vm:EvAddVM x:Key="evAddVM"/>
    </Page.Resources>
    <Grid>
        <StackPanel>
            <StackPanel DataContext="{Binding Events}">
                <Label Content=" "/>
                <StackPanel>
                    <Label Content="День мероприятия"/>
                    <TextBox Text="{Binding Procedures.Daytime.Time}"/>
                </StackPanel>
                <Label Content="Мероприятие"/>
                <TextBox Text="{Binding Type}"/>
                <Label Content="Время"/>
                <TextBox Text="{Binding Price}"/>
                <Label Content="Место"/>
                <TextBox Text="{Binding Status}"/>
            </StackPanel>

            <Button Content="Сохранить" Command="{Binding Save}"/>
        </StackPanel>
    </Grid>
</Page>
