<Page x:Class="Sanatory.View.PrAdd"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Sanatory.View"
      xmlns:vm ="clr-namespace:Sanatory.ViewModel"
      mc:Ignorable="d"
      DataContext="{DynamicResource prAddVM}"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PrAdd">

    <Page.Resources>
        <vm:PrAddVM x:Key="prAddVM"/>
    </Page.Resources>
    
    <Grid>
        
        <StackPanel>
            <StackPanel DataContext="{Binding Problem}">
                <Label Content=" "/>
                <Label Content="Описание задачи"/>
                <TextBox Text="{Binding Description}"/>
                <Label Content="Место выполнения"/>
                <TextBox Text="{Binding Place}"/>
            </StackPanel>

            <Button Content="Сохранить" Command="{Binding Save}"/>
        </StackPanel>
    </Grid>
</Page>
