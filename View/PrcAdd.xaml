<Page x:Class="Sanatory.View.PrcAdd"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Sanatory.View"
      xmlns:vm="clr-namespace:Sanatory.ViewModel"
      mc:Ignorable="d" 
      DataContext="{DynamicResource prcAddVM}"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PrcAdd">

    <Page.Resources>
        <vm:PrcAddVM x:Key="prcAddVM"/>
    </Page.Resources>
    <Grid>
        <StackPanel>
            <StackPanel DataContext="{Binding Procedure}">
                <Label Content=" "/>
                <Label Content="Название процедуры"/>
                <TextBox Text="{Binding Title}"/>
                <Label Content="Опсиание процедуры"/>
                <TextBox Text="{Binding Description}"/>
                <Label Content="Длительность процедуры "/>
                <TextBox Text="{Binding Duration}"/>
                <Label Content="Цена"/>
                <TextBox Text="{Binding Price}"/>
            </StackPanel>

            <Button Content="Сохранить" Command="{Binding Save}"/>
        </StackPanel>
    </Grid>
</Page>
